# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/proxapeople

# Docker PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=proxapeople
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password

# Authentication Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.proxapeople.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
# PORT defaults to 5000 for development, 8080 for production
PORT=5000
FRONTEND_URL=http://localhost:5173

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Session Configuration (fallback)
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400000

# Docker Environment Variables
# Uncomment and configure these for production Docker deployments:
# POSTGRES_DB=proxapeople
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=secure_production_password
# DATABASE_URL=postgresql://postgres:secure_production_password@db:5432/proxapeople